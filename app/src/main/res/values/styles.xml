<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- themes -->

    <style name="AppTheme.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorOnBackground</item>

        <item name="android:statusBarColor">@color/colorBackground</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/dayMode</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@bool/dayMode</item>
        <item name="navigationViewStyle">@style/NavigationViewStyle</item>
        <item name="appBarLayoutStyle">@style/AppBarStyle</item>
        <item name="android:textViewStyle">@style/OATextViewStyle</item>
    </style>

    <style name="AppMediaTheme" parent="AppTheme.NoActionBar">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
    </style>

    <!-- widgets / dialogs / alerts -->

    <style name="AppBarStyle" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.Material3.NavigationView">
        <item name="android:background">@color/colorNavigationDrawerBackground</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="OATextViewStyle">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="OAButtonStyle">
        <item name="cornerRadius">8dp</item>
    </style>

</resources>
